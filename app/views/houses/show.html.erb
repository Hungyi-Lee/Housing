<div class="container">
<!-- Slider From here -->
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="width: 70%; margin:50px auto">
    <div style="width:150px; margin:0 auto">
      <%= link_to "Edit", edit_house_path(@house), class:"btn btn-primary btn-sm" %>
      <%= link_to("Delete", house_path(@house), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger btn-sm") %>
    </div>
    <hr/>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="<%= @house.images.first.imageurl%>">
        <div class="carousel-caption d-none d-md-block">
          <p><%= @house.images.first.note %></p>
        </div>
      </div>
      <% @house.images.drop(1).each do |i| %>
        <div class="carousel-item">
          <img class="d-block w-100" src="<%= i.imageurl%>">
          <div class="carousel-caption d-none d-md-block">
            <p><%= i.note %></p>
          </div>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<!-- Info from here -->
<div class="container">
  <div class="row">
    <div class="form-group col-md-12">
      <b>Took a look ?</b> <%= @house.checked? ? 'Yes' : 'Not yet'%>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm-12">
      <b>Link: </b>
      <%= link_to @house.link, url_with_protocol(@house.link), :target => '_blank' %>
    </div>
    <div class="form-group col-md-12">
      <b>Address: </b>
      <%= @house.address %>
    </div>
