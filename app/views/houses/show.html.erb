      <b>Type of the building: </b>
      <%= @house.typeofbuilding %>
    </div>
    <div class="form-group col-md-3">
      <b>Size(Sqft): </b>
      <%= size(@house.size) %>
    </div>
    <div class="form-group col-md-3">
      <b>Price: </b>
      <%= currency(@house.price) %>
    </div>
    <div class="form-group col-md-3">
      <b>Price/sqft: </b>
      <%= currency(@house.pricesqft) %>
    </div>
