  </div>
  <!-- Outside -->
  <p class="form-group col-md-12 title">Appearance of the House</p>
  <div class="row">
    <div class="form-group col-md-4">
      <b>Road in front of the building ? </b>
      <%=  @house.road %>
    </div>
    <div class="form-group col-md-4">
      <b>Floor ? </b>
